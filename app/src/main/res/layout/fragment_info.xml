<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:background="#31a17676"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#1b1a1a"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐỒ ÁN THỰC TẬP THỰC TẾ"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView

        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRUNG TÂM CÔNG NGHỆ PHẦN MỀM ĐẠI HỌC CẦN THƠ"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:textColor="#c20808"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="TRA CỨU VĂN BẢN ONLINE"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:textStyle="bold"
            android:textColor="#1b1a1a"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cán bộ hướng dẫn:"
            android:textSize="20dp" />

        <TextView
            android:textStyle="bold"
            android:textColor="#1b1a1a"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sinh viên thực hiện:"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:textStyle="bold"
            android:textColor="#1b1a1a"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trần Hoàng Việt\nLê Nguyễn Anh Khang"
            android:textSize="20dp" />

        <TextView
            android:textStyle="bold"
            android:textColor="#1b1a1a"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hồ Thành Lộc\nNguyễn Trọng Nghĩa"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>